@using Models
@model List<MenuCategory>
@{
    ViewData["Title"] = "Menu Categories";
}

<div class="container mt-4">
      
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Menu Categories</h2>
        @if (User.IsInRole("Admin")){
        <a asp-action="New" class="btn btn-success">➕ Add New Category</a>
          }
    </div>
      
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td class="text-center">
                       @if(User.IsInRole("Admin")){
                           <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary me-1">
                            ✏️ Edit
                        </a>
                        
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">
                            🗑️ Delete
                        </a>
                       }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
