 @using Models
@model MenuItem
@{
    ViewData["Title"] = "Edit";
    SelectList categores = new SelectList(ViewBag.Categories, "Id", "Name");
}

<h1>Edit</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-gradient text-white py-4" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Edit Menu Item
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">Update your menu item details</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="IsDeleted" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="DailyOrderCount" />

                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <!-- Name -->
                                <div class="form-group mb-4">
                                    <label asp-for="Name" class="form-label fw-bold">
                                        <i class="bi bi-pencil-fill text-primary"></i> Item Name
                                    </label>
                                    <input asp-for="Name" class="form-control form-control-lg" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>

                                <!-- Description -->
                                <div class="form-group mb-4">
                                    <label asp-for="Description" class="form-label fw-bold">
                                        <i class="bi bi-card-text text-info"></i> Description
                                    </label>
                                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>

                                <!-- Price -->
                                <div class="form-group mb-4">
                                    <label asp-for="Price" class="form-label fw-bold">
                                        <i class="bi bi-currency-dollar text-success"></i> Price
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-success text-white">
                                            <i class="bi bi-cash"></i>
                                        </span>
                                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                </div>

                                <!-- Quantity -->
                                <div class="form-group mb-4">
                                    <label asp-for="quanty" class="form-label fw-bold">
                                        <i class="bi bi-box-seam text-warning"></i> Available Quantity
                                    </label>
                                    <input asp-for="quanty" class="form-control form-control-lg" type="number" min="0" max="1000" />
                                    <span asp-validation-for="quanty" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <!-- Category -->
                                <div class="form-group mb-4">
                                    <label asp-for="CategoryId" class="form-label fw-bold">
                                        <i class="bi bi-tag-fill text-danger"></i> Category
                                    </label>
                                    <select asp-for="CategoryId" class="form-select form-select-lg" asp-items="categores">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>

                                <!-- Preparation Time -->
                                <div class="form-group mb-4">
                                    <label asp-for="PreparationTimeMinutes" class="form-label fw-bold">
                                        <i class="bi bi-clock-fill text-primary"></i> Preparation Time
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <input asp-for="PreparationTimeMinutes" class="form-control" type="number" min="1" />
                                        <span class="input-group-text bg-primary text-white">minutes</span>
                                    </div>
                                    <span asp-validation-for="PreparationTimeMinutes" class="text-danger small"></span>
                                </div>

                                <!-- Current Image Preview -->
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div class="form-group mb-4">
                                        <label class="form-label fw-bold">
                                            <i class="bi bi-image text-info"></i> Current Image
                                        </label>
                                        <div class="card border-2">
                                            <div class="card-body text-center p-2">
                                                <img src="@Model.ImageUrl" alt="Current Image" class="img-fluid rounded" style="max-height: 150px;" />
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!-- Image Upload -->
                                <div class="form-group mb-4">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-image-fill text-info"></i> Change Image
                                    </label>
                                    <div class="card border-2 border-dashed">
                                        <div class="card-body text-center">
                                            <div id="imagePreview" class="mb-3" style="display: none;">
                                                <img id="preview" src="" alt="Preview" class="img-fluid rounded" style="max-height: 150px;" />
                                            </div>
                                            <input asp-for="ImageFile" type="file" accept="image/*" class="form-control" id="imageFile" />

                                            <small class="form-text text-muted d-block mt-2">Leave empty to keep current image</small>
                                        </div>
                                    </div>
                                    <input asp-for="ImageUrl" type="hidden" />
                                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Submit Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-action="Getall" class="btn btn-secondary btn-lg px-5">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg px-5">
                                        <i class="bi bi-save-fill"></i> Save Changes
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Image Preview
        document.getElementById('imageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });
    </script>

    <style>
        .bg-gradient {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

        .form-control:focus, .form-select:focus {
            border-color: #f5576c;
            box-shadow: 0 0 0 0.25rem rgba(245, 87, 108, 0.25);
        }

        .card {
            border-radius: 15px;
        }

        .border-dashed {
            border-style: dashed !important;
        }

        .form-label {
            color: #333;
            margin-bottom: 0.75rem;
        }

        .input-group-text {
            font-weight: 600;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
