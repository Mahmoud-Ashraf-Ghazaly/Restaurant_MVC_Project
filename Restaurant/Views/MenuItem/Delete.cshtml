@using Models
@model MenuItem
{

    ViewData["Title"]="Delete";

    SelectList categores =new SelectList(ViewBag.Categories,"Id","Name");

}


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-gradient-danger text-white py-4">
                    <h2 class="mb-0">
                        <i class="bi bi-trash-fill"></i> Delete Menu Item
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">This action cannot be undone</p>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-warning border-0 shadow-sm mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this menu item?
                    </div>

                    <!-- Item Details -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <i class="bi bi-pencil-fill text-primary me-2"></i>
                                <strong>Name:</strong>
                                <p class="mb-0 mt-1">@Model.Name</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <i class="bi bi-currency-dollar text-success me-2"></i>
                                <strong>Price:</strong>
                                <p class="mb-0 mt-1">@Model.Price.ToString("C")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <i class="bi bi-tag-fill text-danger me-2"></i>
                                <strong>Category:</strong>
                                <p class="mb-0 mt-1">@(Model.Category?.Name ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <i class="bi bi-card-text text-info me-2"></i>
                                <strong>Description:</strong>
                                <p class="mb-0 mt-1">@(Model.Description ?? "N/A")</p>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="GetAll" class="btn btn-secondary btn-lg px-5">
                            <i class="bi bi-x-circle"></i> No, Go Back
                        </a>
                        <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger btn-lg px-5" onclick="return confirm('Are you absolutely sure?');">
                                <i class="bi bi-trash-fill"></i> Yes, Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .bg-gradient-danger {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }
        .card {
            border-radius: 15px;
        }
    </style>
}
