@using Models
@model MenuItem
@{
    ViewData["Title"] = "New";
    SelectList categories = new SelectList(ViewBag.Categories, "Id", "Name");

}

<h1>New</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-gradient text-white py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h2 class="mb-0">
                        <i class="bi bi-plus-circle-fill"></i> Create New Menu Item
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">Add a delicious item to your menu</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="New" method="post" enctype="multipart/form-data" id="menuItemForm">
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <!-- Name -->
                                <div class="form-group mb-4">
                                    <label asp-for="Name" class="form-label fw-bold">
                                        <i class="bi bi-pencil-fill text-primary"></i> Item Name
                                    </label>
                                    <input asp-for="Name" class="form-control form-control-lg" placeholder="e.g., Grilled Chicken" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>

                                <!-- Description -->
                                <div class="form-group mb-4">
                                    <label asp-for="Description" class="form-label fw-bold">
                                        <i class="bi bi-card-text text-info"></i> Description
                                    </label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe your delicious dish..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>

                                <!-- Price -->
                                <div class="form-group mb-4">
                                    <label asp-for="Price" class="form-label fw-bold">
                                        <i class="bi bi-currency-dollar text-success"></i> Price
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-success text-white">
                                            <i class="bi bi-cash"></i>
                                        </span>
                                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                </div>

                                <!-- Quantity -->
                                <div class="form-group mb-4">
                                    <label asp-for="quanty" class="form-label fw-bold">
                                        <i class="bi bi-box-seam text-warning"></i> Available Quantity
                                    </label>
                                    <input asp-for="quanty" class="form-control form-control-lg" type="number" min="0" max="1000" placeholder="100" />
                                    <span asp-validation-for="quanty" class="text-danger small"></span>
                                    <small class="form-text text-muted">Maximum: 1000 units</small>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <!-- Category -->
                                <div class="form-group mb-4">
                                    <label asp-for="CategoryId" class="form-label fw-bold">
                                        <i class="bi bi-tag-fill text-danger"></i> Category
                                    </label>
                                    <select asp-for="CategoryId"
                                            class="form-select form-select-lg"
                                            asp-items="categories">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>

                                <!-- Preparation Time -->
                                <div class="form-group mb-4">
                                    <label asp-for="PreparationTimeMinutes" class="form-label fw-bold">
                                        <i class="bi bi-clock-fill text-primary"></i> Preparation Time
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <input asp-for="PreparationTimeMinutes" class="form-control" type="number" min="1" placeholder="15" />
                                        <span class="input-group-text bg-primary text-white">minutes</span>
                                    </div>
                                    <span asp-validation-for="PreparationTimeMinutes" class="text-danger small"></span>
                                </div>

                                <!-- Image Upload -->
                                <div class="form-group mb-4">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-image-fill text-info"></i> Item Image
                                    </label>
                                    <div class="card border-2 border-dashed">
                                        <div class="card-body text-center">
                                            <div id="imagePreview" class="mb-3" style="display: none;">
                                                <img id="preview" src="" alt="Preview" class="img-fluid rounded" style="max-height: 200px;" />
                                            </div>
                                            <div id="uploadPlaceholder">
                                                <i class="bi bi-cloud-upload text-muted" style="font-size: 3rem;"></i>
                                                <p class="text-muted mb-2">Choose an image file</p>
                                            </div>
                                            <input asp-for="ImageFile" type="file" accept="image/*" class="form-control" id="imageFile" />

                                            <small class="form-text text-muted d-block mt-2">Supported: JPG, PNG, GIF (Max 5MB)</small>
                                        </div>
                                    </div>
                                    <input asp-for="ImageUrl" type="hidden" id="imageUrlHidden" />
                                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Submit Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-action="Getall" class="btn btn-secondary btn-lg px-5">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-success btn-lg px-5">
                                        <i class="bi bi-check-circle-fill"></i> Create Menu Item
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Image Preview
        document.getElementById('imageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                    document.getElementById('uploadPlaceholder').style.display = 'none';

                    // Store the file name or path in hidden field
                    // You'll need to handle actual upload in controller
                    document.getElementById('imageUrlHidden').value = '/images/menu/' + file.name;
                }
                reader.readAsDataURL(file);
            }
        });

        // Form Validation Enhancement
        $(document).ready(function() {
            $('#menuItemForm').on('submit', function(e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    // Scroll to first error
                    $('html, body').animate({
                        scrollTop: $('.text-danger:visible:first').offset().top - 100
                    }, 500);

                    // Show alert
                    Swal.fire({
                        icon: 'error',
                        title: 'Validation Error',
                        text: 'Please fix the errors before submitting',
                        confirmButtonColor: '#dc3545'
                    });
                }
            });
        });
    </script>

    <style>
        .bg-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
        }

        .card {
            border-radius: 15px;
        }

        .border-dashed {
            border-style: dashed !important;
        }

        .form-label {
            color: #333;
            margin-bottom: 0.75rem;
        }

        .input-group-text {
            font-weight: 600;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
} 