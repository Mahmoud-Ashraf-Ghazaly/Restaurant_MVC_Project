
@using Models
@model MenuItem
@{
    ViewData["Title"] = "Item Details";
    ViewBag.categories = new SelectList(ViewBag.Categories, "Id", "Name");
}

<div class="container py-5">
    <div class="row">
        <!-- Image Section -->
        <div class="col-lg-5 mb-4">
            <div class="card shadow-sm border-0">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="~/images/@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="height: 400px; object-fit: cover;">
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                        <i class="fas fa-utensils fa-5x text-muted"></i>
                    </div>
                }
            </div>
        </div>

        <!-- Details Section -->
        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2 class="mb-2">@Model.Name</h2>
                            @if (Model.Category != null)
                            {
                                <span class="badge bg-primary">@Model.Category.Name</span>
                            }
                        </div>
                        <h3 class="text-success mb-0">@Model.Price.ToString("C")</h3>
                    </div>

                    <hr>

                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5 class="text-muted mb-2">Description</h5>
                            <p class="lead">@Model.Description</p>
                        </div>
                    }

                    <!-- Details Grid -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <i class="fas fa-clock text-primary me-2"></i>
                                <strong>Preparation Time:</strong>
                                <p class="mb-0 mt-1">@Model.PreparationTimeMinutes minutes</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <i class="fas fa-box text-primary me-2"></i>
                                <strong>Available Quantity:</strong>
                                <p class="mb-0 mt-1">
                                    @if (Model.quanty > 0)
                                    {
                                        <span class="text-success">@Model.quanty items</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">Out of stock</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <i class="fas fa-chart-line text-primary me-2"></i>
                                <strong>Daily Orders:</strong>
                                <p class="mb-0 mt-1">@Model.DailyOrderCount orders today</p>
                            </div>
                        </div>
                        @if(User.IsInRole("Admin")){
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <i class="fas fa-hashtag text-primary me-2"></i>
                                <strong>Item ID:</strong>
                                <p class="mb-0 mt-1">#@Model.Id</p>
                            </div>
                        </div>
                        }
                    </div>

                    <!-- Availability Status -->
                    @* <div class="alert @(Model.quanty > 0 ? "alert-success" : "alert-danger") d-flex align-items-center mb-4">
                        <i class="fas @(Model.quanty > 0 ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                        <div>
                            @if (Model.quanty > 0)
                            {
                                <strong>Available Now!</strong> Ready to order
                            }
                            else
                            {
                                <strong>Currently Unavailable</strong> Please check back later
                            }
                        </div>
                    </div> *@

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2 flex-wrap">
                          @if(User.IsInRole("Admin")){
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i> Edit Item
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i> Delete
                        </a>
                          }
                        <a asp-action="GetAll" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>

            <!-- Additional Info Card -->
             @if (Model.OrderItems != null && Model.OrderItems.Any())
            {
                <div class="card shadow-sm border-0 mt-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="fas fa-info-circle text-info me-2"></i>Order History
                        </h5>
                        <p class="mb-0">This item has been ordered <strong>@Model.OrderItems.Count</strong> time(s)</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
}
